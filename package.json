{
  "name": "ff-cpdn",
  "version": "1.4.0",
  "description": "Clear private data related to the current tab.",
  "scripts": {
    "zip": "sh scripts/zip.sh",
    "web-ext": "web-ext run --browser-console",
    "watch": "webpack --config webpack.dev.js --watch",
    "test": "jest",
    "build": "webpack --config webpack.prod.js",
    "package": "web-ext lint && web-ext build",
    "release": "standard-version -a",
    "postrelease": "git push --follow-tags",
    "publish": "web-ext sign --channel=listed --api-key=$JWT_ISSUER --api-secret=$JWT_SECRET"
  },
  "homepage": "https://addons.mozilla.org/firefox/addon/clear-private-data-now",
  "bugs": {
    "url": "https://github.com/tmorin/ff-cpdn/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tmorin/ff-cpdn.git"
  },
  "license": "MIT",
  "author": {
    "name": "Thibault Morin",
    "url": "https://tmorin.github.io"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ],
    "plugins": [
      "@babel/syntax-jsx",
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "Snabbdom.createElement"
        }
      ]
    ]
  },
  "webExt": {
    "sourceDir": "public"
  },
  "standard-version": {
    "scripts": {
      "postbump": "node ./scripts/postbump.js > postbump.log",
      "precommit": "git add -A"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js",
      "<rootDir>/src/**/*.jsx"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.4.3",
    "@cycle/dom": "^22.3.0",
    "@cycle/run": "^5.2.0",
    "@fortawesome/fontawesome-free": "^5.8.1",
    "@types/jest": "^24.0.14",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^5.0.3",
    "core-js": "^3.1.3",
    "css-loader": "^3.0.0",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "regenerator-runtime": "^0.13.2",
    "sass-loader": "^7.1.0",
    "snabbdom-pragma": "^2.8.0",
    "standard-version": "^6.0.0",
    "style-loader": "^0.23.1",
    "url-loader": "^2.0.0",
    "web-ext": "^3.0.0",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-merge": "^4.2.1",
    "xstream": "^11.11.0"
  }
}
