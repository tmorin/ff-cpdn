{
  "name": "ff-cpdn",
  "version": "1.7.2",
  "description": "Clear private data related to the current tab.",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "package": "web-ext lint && web-ext build",
    "postrelease": "git push --follow-tags",
    "publish": "web-ext sign --channel=listed --api-key=$WEB_EXT_API_KEY --api-secret=$WEB_EXT_API_SECRET",
    "release": "standard-version -a",
    "test": "jest",
    "watch": "webpack --config webpack.dev.js --watch",
    "web-ext": "web-ext run --browser-console",
    "zip": "sh scripts/zip.sh"
  },
  "homepage": "https://addons.mozilla.org/firefox/addon/clear-private-data-now",
  "bugs": {
    "url": "https://github.com/tmorin/ff-cpdn/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tmorin/ff-cpdn.git"
  },
  "license": "MIT",
  "author": {
    "name": "Thibault Morin",
    "url": "https://tmorin.github.io"
  },
  "webExt": {
    "sourceDir": "public"
  },
  "standard-version": {
    "scripts": {
      "postbump": "node ./scripts/postbump.js > postbump.log",
      "precommit": "git add -A"
    }
  },
  "jest": {},
  "devDependencies": {
    "@cycle/dom": "^22.8.0",
    "@cycle/run": "^5.5.0",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@tmorin/udom": "^0.6.1",
    "@types/jest": "^26.0.23",
    "copy-webpack-plugin": "^9.0.0",
    "core-js": "^3.14.0",
    "css-loader": "^5.2.6",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^27.0.4",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^6.0.0",
    "optimize-css-assets-webpack-plugin": "^6.0.0",
    "regenerator-runtime": "^0.13.7",
    "sass-loader": "^12.1.0",
    "snabbdom-pragma": "^2.8.0",
    "standard-version": "^9.3.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.4",
    "url-loader": "^4.1.1",
    "web-ext": "^6.1.0",
    "web-ext-types": "^3.2.1",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0",
    "xstream": "^11.14.0"
  }
}
